
{{#if this.saved}}
<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
       <a class="button button-right is-primary remove-button" data-id={{this.id}}>Remove</a>
      </div>
      <div class="media-content">
        <p><a href={{this.link}} class="title is-4">{{this.title}}</a></p>
        <p class="subtitle is-6">{{this.summary}}</p>
      </div>
    </div>
  </div>
</div>
<br>
{{/if}}